<IfModule mod_rewrite.c>
    Options +FollowSymLinks
    RewriteEngine On

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
	
    RewriteRule ^user/show$ index.php?controller=UserController&action=show [L]
    RewriteRule ^user/validate$ index.php?controller=UserController&action=validate [L]
    RewriteRule ^user/logout$ index.php?controller=UserController&action=logout [L]

    RewriteRule ^article/default$ index.php?controller=ArticleController&action=default [L]
    RewriteRule ^article/list$ index.php?controller=ArticleController&action=listArticles [L]
    RewriteRule ^article/updateView$ index.php?controller=ArticleController&action=updateStockView [L]
    RewriteRule ^article/update$ index.php?controller=ArticleController&action=updateStock [L]
    RewriteRule ^article/delete/([0-9]+)$ index.php?controller=ArticleController&action=delete&id=$1 [L]

    #RewriteRule ^libro/listar_libros$ index.php?action=listLibro [L]
    #RewriteRule ^user/logout$ index.php?controller=UserController&action=logout [L]
    #Forma generica para las 4 opciones
    #RewriteRule ^([a-zA-Z]+)[/]?$ index.php?action=$1 [L]
</IfModule>

# Flag: [L]
# Stop the rewriting process immediately and don't apply any more rules.

# Referencia:
# - https://httpd.apache.org/docs/current/mod/mod_rewrite.html